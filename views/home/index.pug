extends ../layout
block head
    link(href='/css/home/landing-page.css', rel='stylesheet')    
    script(src="/js/home/landing-page.js")

block body
    div.landing-header
        h3.landing-title #{title}
        p.landing-byline For Media Loves On The Move
    div.main-body
        div.latest-carousel
            for film, i in filmList
                div.hvr-grow.film-carousel-container(id='poster'+i style= i%2 === 0? 'display: none':'' onmouseover="onPosterHover(this)" onmouseout="onPosterHover(this)" onclick=`onPosterClicked(${film.id})`)
                    div.film-poster
                        img.img-fluid.img-poster(src="https://image.tmdb.org/t/p/w300" + film.poster_path)
                    div.film-carousel-text(style="display:none;")
                        p #{film.overview.slice(0,50)}...
    if user
        h3=user.username
