extends  ../layout
block head
    link(href='/css/new/index-news.css', rel='stylesheet')
    link(href='/quill/quill.snow.css', rel='stylesheet')
    script(src="/quill/quill.js")
    script(src="/js/shared/quill-display.js")
block body
    div.main-news-container
        for news in newsList
            - const post = JSON.parse(news.body);
            div.page-container.news-post-container
                div.news-post-header
                    div.news-post-title
                        h3.news-title #{news.title}
                    div.news-post-date
                        span.news-date #{moment(news.publishDate).format("ddd MMM YY")}
                div.news-post-body
                    div.news-post-img
                        img.img-news(src=news.coverImg)
                    div.news-post-blurb
                        p #{post.ops[0].insert}...

block end
