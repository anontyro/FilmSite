extends ../layout

block body
    div.film-search
        for film in filmSearch.results
            a.search-link(href='/film/' + film.id )
                div.search-result
                    div.search-header
                        p.search-title #{film.title}
                            if film.release_date
                            |    (#{film.release_date.substring(0,4)})
                    div.search-info
                        p.search-overview #{film.overview.substring(0,150)}...